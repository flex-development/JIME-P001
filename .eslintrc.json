// ESLint Configuration
// See: https://eslint.org/docs/user-guide/configuring

{
  "env": {
    "browser": true,
    "es6": true,
    "jest/globals": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "prettier/react",
    "prettier/@typescript-eslint"
  ],
  "globals": {},
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true
    },
    "ecmaVersion": 2020,
    "project": [
      "./tsconfig.json",
      "./packages/**/tsconfig.json"
    ],
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "import",
    "jest",
    "jsx-a11y",
    "json",
    "html",
    "react",
    "react-hooks"
  ],
  "rules": {
    "@typescript-eslint/ban-ts-comment": 1,
    "@typescript-eslint/ban-ts-ignore": 0,
    "@typescript-eslint/ban-types": 0,
    "@typescript-eslint/camelcase": 0,
    "@typescript-eslint/explicit-function-return-type": 0,
    "@typescript-eslint/explicit-member-accessibility": 0,
    "@typescript-eslint/member-delimiter-style": [
      2,
      {
        "multiline": {
          "delimiter": "none",
          "requireLast": false
        }
      }
    ],
    "@typescript-eslint/no-empty-function": 1,
    "@typescript-eslint/no-empty-interface": [
      1,
      {
        "allowSingleExtends": true
      }
    ],
    "@typescript-eslint/no-explicit-any": 1,
    "@typescript-eslint/no-non-null-assertion": 0,
    "@typescript-eslint/no-use-before-define": 0,
    "@typescript-eslint/no-warning-comments": 0,
    "@typescript-eslint/no-useless-constructor": 1,
    "eol-last": 2,
    "eqeqeq": 1,
    "import/extensions": [
      2,
      {
        "css": "always",
        "json": "always",
        "md": "always",
        "mdx": "always",
        "stories": "always",
        "scss": "always",
        "svg": "always"
      }
    ],
    "import/named": 2,
    "import/namespace": 2,
    "import/no-extraneous-dependencies": [
      2,
      {
        "bundledDependencies": true,
        "devDependencies": true
      }
    ],
    "import/no-unresolved": [
      2,
      {
        "ignore": [
          "@flex-development/kustomtypez",
          "@kustomz",
          "@kustomz-config",
          "@kustomz-mocks",
          "@kustomz-stories",
          "@storybook"
        ]
      }
    ],
    "import/prefer-default-export": 0,
    "indent": 0,
    "jest/no-mocks-import": 1,
    "json/*": [2, "allowComments"],
    "jsx-a11y/accessible-emoji": 0,
    "jsx-a11y/anchor-is-valid": [
      1,
      {
        "components": [
          "A", 
          "Link",
          "LinkTo"
        ],
        "specialLink": [
          "kind", 
          "overrideParams", 
          "story",
          "to"
        ]
      }
    ],
    "jsx-a11y/label-has-associated-control": [
      2,
      {
        "labelComponents": [
          "Label"
        ],
        "labelAttributes": [
          "label"
        ],
        "controlComponents": [
          "Input"
        ],
        "depth": 3
      }
    ],
    // Deprecated in eslint-plugin-jsx-a11y@6.1.0
    "jsx-a11y/label-has-for": 0,
    // "prettier/prettier": [
    //   2,
    //   { 
    //     "endOfLine": "auto" 
    //   }
    // ],
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true
      }
    ],
    "react/destructuring-assignment": 0,
    "react/display-name": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".mdx",
          ".tsx"
        ]
      }
    ],
    "react/jsx-fragments": 0,
    "react/jsx-no-bind": [
      2,
      {
        "allowArrowFunctions": true,
        "allowBind": true,
        "allowFunctions": true,
        "ignoreDOMComponents": true,
        "ignoreRefs": true
      }
    ],
    "react/jsx-props-no-spreading": 0,
    "react/no-unescaped-entities": 0,
    "react/prop-types": 0,
    "react/self-closing-comp": 1,
    "react/sort-comp": [
      2,
      {
        "groups": {
          "staticLifecycle": [
            "displayName", 
            "propTypes", 
            "defaultProps", 
            "getDerivedStateFromProps"
          ]
        },
        "order": [
          "staticLifecycle",
          "static-methods",
          "instance-variables",
          "lifecycle",
          "/^on.+$/",
          "/^(get|set)(?!(DerivedStateFromProps|SnapshotBeforeUpdate$)).+$/",
          "instance-methods",
          "instance-variables",
          "everything-else",
          "render"
        ]
      }
    ],
    "react/state-in-constructor": 0,
    "react/static-property-placement": 0,
    "react-hooks/exhaustive-deps": 1,
    "react-hooks/rules-of-hooks": 1,
    "sort-keys": [
      1,
      "asc",
      {
        "caseSensitive": true,
        "minKeys": 2,
        "natural": true
      }
    ],
    "space-before-function-paren": [
      2,
      {
        "anonymous": "never",
        "asyncArrow": "always",
        "named": "never"
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "**/*.js"
      ],
      "parser": "babel-eslint",
      "rules": {
        "@typescript-eslint/explicit-module-boundary-types": 0,
        "@typescript-eslint/no-var-requires": 0,
       "require-jsdoc": 1,
       "valid-jsdoc": 2
      }
    },
    {
      "files": [
        "**/*.d.ts"
      ],
      "rules": {
        "prettier/prettier": 0
      }
    }
  ],
  "settings": {
    "html/html-extensions": [".html"],
    "import/ignore": ["node_modules\\/(?!@storybook)"],
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts", ".tsx", ".mjs", ".d.ts"],
        "paths": ["node_modules/", "node_modules/@types/"]
      }
    },
    "react": {
      "version": "detect"
    }
  }
}