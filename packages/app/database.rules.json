{
  "rules": {
    "$environment": {
      ".read": true,
      "reviews": {
        ".indexOn": [
          "created_at",
          "customer_id",
          "id",
          "product_handle",
          "product_id",
          "product_sku",
          "product_title",
          "rating",
          "title"
        ],
        ".write": "auth.token.collaborator == true || auth.token.customer == true"
      }
    }
  }
}
