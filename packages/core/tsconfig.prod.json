{
  "compilerOptions": {
    "declaration": true,
    "lib": ["esnext"],
    "module": "es6",
    "noEmit": false,
    "outDir": "./dist",
    "plugins": [
      {
        "afterDeclarations": true,
        "exclude": ["*"],
        "transform": "@zerollup/ts-transform-paths"
      }
    ],
    "rootDir": "./src"
  },
  "exclude": ["**/__tests__/**"],
  "extends": "./tsconfig.json",
  "include": ["src"]
}
