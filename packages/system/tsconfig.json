{
  "awesomeTypescriptLoaderOptions": {
    "babelCore": "@babel/core",
    "babelOptions": {
      "babelrc": true
    },
    "useBabel": true,
    "useCache": true
  },
  "compilerOptions": {
    "baseUrl": "./",
    "checkJs": false,
    "downlevelIteration": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "@kustomz/*": ["src/*"],
      "@kustomz-config/*": ["storybook/config/*"],
      "@kustomz-stories/*": ["storybook/stories/*"]
    },
    "sourceMap": false,
    "target": "esnext"
  },
  "extends": "../../tsconfig.json",
  "files": ["__tests__/jest-env.d.ts", "src/types/index.d.ts"],
  "include": ["__tests__", "storybook", "src"]
}
