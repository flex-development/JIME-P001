{
  "awesomeTypescriptLoaderOptions": {
    "babelCore": "@babel/core",
    "babelOptions": {
      "babelrc": true
    },
    "useBabel": true,
    "useCache": true
  },
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "./dist/types",
    "downlevelIteration": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": false,
    "outDir": "./dist",
    "paths": {
      "@kustomz/*": ["src/lib/*"],
      "@kustomz-config/*": [".storybook/config/*"]
    },
    "rootDir": "./src",
    "sourceMap": false,
    "target": "esnext"
  },
  "extends": "../../tsconfig.json",
  "files": ["src/lib/declarations.d.ts"],
  "include": ["src"]
}
