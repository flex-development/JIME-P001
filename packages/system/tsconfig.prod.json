{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "./dist",
    "plugins": [
      {
        "afterDeclarations": true,
        "exclude": ["*"],
        "transform": "@zerollup/ts-transform-paths",
        "useRootDirs": true
      }
    ],
    "rootDir": "./src"
  },
  "exclude": ["**/*.stories.tsx", "**/*.spec.ts", "**/*.spec.tsx"],
  "extends": "./tsconfig.app.json",
  "include": ["src"]
}
