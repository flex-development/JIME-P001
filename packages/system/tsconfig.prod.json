{
  "compilerOptions": {
    "declaration": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "plugins": [
      {
        "afterDeclarations": true,
        "transform": "typescript-transform-paths",
        "useRootDirs": true
      }
    ],
    "rootDir": "./src",
    "sourceMap": true
  },
  "exclude": ["**/*.spec.ts", "**/*.spec.tsx"],
  "extends": "./tsconfig.json",
  "include": ["src"]
}
