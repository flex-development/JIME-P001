{
  "compilerOptions": {
    "declaration": true,
    "module": "esnext",
    "noEmit": false,
    "outDir": "./dist",
    "plugins": [
      {
        "afterDeclarations": true,
        "exclude": ["*"],
        "transform": "@zerollup/ts-transform-paths"
      }
    ],
    "rootDir": "./src",
    "target": "es6"
  },
  "exclude": [
    "**/__mocks__/**",
    "**/__tests__/**",
    "**/*.stories.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "extends": "./tsconfig.app.json",
  "include": ["src"]
}
