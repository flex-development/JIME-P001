{
  "compilerOptions": {
    "declaration": true,
    "noEmit": false,
    "outDir": "./dist",
    "plugins": [
      {
        "afterDeclarations": true,
        "exclude": ["*"],
        "transform": "@zerollup/ts-transform-paths"
      }
    ],
    "rootDir": "./src",
    "target": "esnext"
  },
  "exclude": ["**/*.stories.tsx", "**/*.spec.ts", "**/*.spec.tsx"],
  "extends": "./tsconfig.app.json",
  "include": ["src"]
}
