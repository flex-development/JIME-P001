{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "./dist",
    "plugins": [
      {
        "afterDeclarations": true,
        "exclude": ["*"],
        "transform": "@zerollup/ts-transform-paths",
        "useRootDirs": true
      }
    ]
  },
  "exclude": ["**/*.stories.tsx", "**/*.spec.ts", "**/*.spec.tsx"],
  "extends": "./tsconfig.app.json",
  "include": [
    "src/config",
    "src/hooks",
    "src/lib",
    "src/providers",
    "src/types",
    "src/utils",
    "src/index.ts"
  ]
}
